<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bluegray"
    tools:context=".Login">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_gravity="bottom"
        app:cardBackgroundColor="@color/bluegray">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start|right"
        android:src="@drawable/rp11"
        />

    <ImageView
        android:id="@+id/loginLogo"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:src="@drawable/sup1"
        />

</LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="22dp"
        app:cardBackgroundColor="@color/white"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="22dp"
            android:paddingRight="22dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Login"
                android:textColor="@color/bluegray"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textSize="34dp"
                />

            <EditText
                android:id="@+id/edtName"
                android:layout_width="match_parent"
                android:background="@drawable/custom_textfield"
                android:layout_height="60dp"
                android:layout_marginTop="60dp"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:hint="Enter Email..."
                android:drawablePadding="6dp"
                android:drawableStart="@drawable/email"
                android:inputType="textEmailAddress"
                android:singleLine="true"
                android:paddingLeft="16dp" />

            <EditText
                android:id="@+id/edtPassword"
                android:layout_width="match_parent"
                android:background="@drawable/custom_textfield"
                android:layout_height="60dp"
                android:layout_marginTop="40dp"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:hint="Enter Password..."
                android:drawablePadding="6dp"
                android:drawableStart="@drawable/pswd"
                android:singleLine="true"
                android:inputType="textPassword"
                android:paddingLeft="16dp" />

            <CheckBox
                android:id="@+id/checkboxShowPswd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="Show Password"
                android:textColor="@color/black"
                >
            </CheckBox>

            <TextView
                android:id="@+id/txtForget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="Forget Password?"
                android:textColor="@color/bluegray"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textSize="16dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="22dp"
                android:layout_marginTop="10dp"
                android:gravity="right">

                <Button
                    android:id="@+id/btnLogin"
                    android:layout_width="120dp"
                    android:layout_height="60dp"
                    android:text="Login"
                    android:backgroundTint="@color/bluegray"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    />

                <Button
                    android:id="@+id/btnRegister"
                    android:layout_width="120dp"
                    android:layout_height="60dp"
                    android:text="SIGN UP"
                    android:layout_marginLeft="16dp"
                    android:backgroundTint="@color/brown"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/mqText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/marqueeText"
                android:textColor="@color/bluegray"
                android:layout_weight="3"
                android:gravity="bottom"
                android:paddingBottom="10dp"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:textSize="14dp"
                android:layout_gravity="bottom"
                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>