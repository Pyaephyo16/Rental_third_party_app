<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bluegray"
    tools:context=".DetailPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/postImage"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:src="@drawable/jujutsu_kaisen_1"
            android:scaleType="fitXY"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:gravity="right"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnUpdate"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="Update"
                android:layout_marginTop="12dp"
                android:backgroundTint="@color/white"
                android:textColor="@color/darkBlue"
                android:textSize="15dp"
                android:visibility="gone"
                android:layout_gravity="right"
                />

            <Button
                android:id="@+id/btnDelete"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="Delete"
                android:layout_marginTop="12dp"
                android:backgroundTint="@color/red"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:visibility="gone"
                android:layout_marginLeft="10dp"
                android:layout_gravity="right"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtRefTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reference No."
                android:textColor="@color/darkBlue"
                android:paddingLeft="16dp"
                android:layout_marginTop="22dp"
                android:layout_weight="3"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/txtRefData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reference No."
                android:layout_weight="3"
                android:textColor="@color/white"
                android:layout_marginTop="22dp"
                android:textSize="20dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtPropertyTypeTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Property Type"
                android:textColor="@color/darkBlue"
                android:paddingLeft="16dp"
                android:layout_marginTop="22dp"
                android:layout_weight="3"
                android:textSize="20dp" />

            <Spinner
                android:id="@+id/detailPropertyTypeSpinner"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:layout_weight="3"
                android:backgroundTint="@color/transparentBlack"
                android:backgroundTintMode="src_over"
                android:dropDownWidth="match_parent"
                android:popupBackground="@color/white"
                android:spinnerMode="dropdown" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtBedroomsTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bedrooms Type"
                android:textColor="@color/darkBlue"
                android:paddingLeft="16dp"
                android:layout_marginTop="22dp"
                android:layout_weight="3"
                android:textSize="20dp" />

            <Spinner
                android:id="@+id/detailBedroomsSpinner"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:layout_weight="3"
                android:backgroundTint="@color/transparentBlack"
                android:backgroundTintMode="src_over"
                android:dropDownWidth="match_parent"
                android:popupBackground="@color/white"
                android:spinnerMode="dropdown" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtDateTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textColor="@color/darkBlue"
                android:paddingLeft="16dp"
                android:layout_marginTop="22dp"
                android:layout_weight="3"
                android:textSize="20dp" />

            <Button
                android:id="@+id/detailDate"
                android:layout_width="match_parent"
                android:layout_weight="3"
                android:backgroundTint="@color/transparentBlack"
                android:layout_height="50dp"
                android:enabled="false"
                android:textColor="@color/white"
                android:layout_marginTop="22dp"
                android:textAlignment="textStart"
                android:textSize="18dp"
                android:paddingLeft="16dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rental Price"
                android:textColor="@color/darkBlue"
                android:paddingLeft="16dp"
                android:layout_marginTop="22dp"
                android:layout_weight="3"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/edtDetailPrice"
                android:layout_width="match_parent"
                android:layout_weight="3"
                android:background="@color/transparent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:inputType="numberDecimal"
                android:hint=""
                android:enabled="false"
                android:singleLine="true" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginHorizontal="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtFurnitureSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Furniture Type"
                android:textColor="@color/darkBlue"
                android:paddingLeft="16dp"
                android:layout_marginTop="22dp"
                android:layout_weight="3"
                android:textSize="20dp" />

            <Spinner
                android:id="@+id/detailFurnitureSpinner"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:layout_weight="3"
                android:backgroundTint="@color/transparentBlack"
                android:backgroundTintMode="src_over"
                android:dropDownWidth="match_parent"
                android:popupBackground="@color/white"
                android:spinnerMode="dropdown" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtRemark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Remark"
                android:textColor="@color/darkBlue"
                android:paddingLeft="16dp"
                android:layout_marginTop="22dp"
                android:layout_weight="3"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/edtDetailRemark"
                android:layout_width="match_parent"
                android:layout_weight="3"
                android:background="@color/transparent"
                android:layout_height="80dp"
                android:gravity="top"
                android:layout_marginTop="20dp"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:inputType="textMultiLine"
                android:hint="Remark...(Optional)"
                android:singleLine="false"
                android:enabled="false" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtReporterTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reporter Name"
                android:textColor="@color/darkBlue"
                android:paddingLeft="16dp"
                android:layout_marginTop="22dp"
                android:layout_weight="3"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/txtReporterName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_weight="3"
                android:textColor="@color/white"
                android:layout_marginTop="22dp"
                android:textSize="18dp"
                />

        </LinearLayout>

    </LinearLayout>

</ScrollView>